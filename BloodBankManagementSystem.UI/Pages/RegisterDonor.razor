@page "/registerDonor"
@inject HttpClient Http
@if (IsLoading)
{
     <div class="loader-overlay">
          <div class="loader"></div>
     </div>
}
@if(IsCreateUpdateDonorPopup)
{
    <div class="position-relative">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Close" @onclick="HandleCancelOrClose"></button>
    </div>
}
<h4>@PageTitle</h4>
@if (!string.IsNullOrEmpty(Message))
{
    <p class="alert alert-info">@Message</p>
}
<EditForm Model="NewDonor" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">First Name:</label>
                <InputText class="form-control" @bind-Value="NewDonor.FirstName" tabindex="1" />
            </div>

            <div class="mb-3">
                <label class="form-label">Email:</label>
                <InputText class="form-control" @bind-Value="NewDonor.Email" tabindex="3" />
            </div>

            <div class="mb-3">
                <label class="form-label">Gender:</label>
                <InputSelect class="form-control" @bind-Value="NewDonor.Gender" tabindex="5">
                    <option value="">Select Gender</option>
                    @foreach (var gender in GenderList)
                    {
                        <option value="@gender">@gender</option>
                    }
                </InputSelect>
            </div>


            <div class="mb-3">
                <label class="form-label">Age:</label>
                <InputNumber class="form-control" @bind-Value="NewDonor.Age" tabindex="3" />
            </div>

            <div class="mb-3">
                <label class="form-label">Country:</label>
                <InputText class="form-control" @bind-Value="NewDonor.Country" tabindex="6" />
            </div>

            <div class="mb-3">
                <label class="form-label">District:</label>
                <InputText class="form-control" @bind-Value="NewDonor.District" tabindex="8" />
            </div>

            <div class="mb-3">
                <label class="form-label">Last Donation Date:</label>
                <InputDate class="form-control" @bind-Value="NewDonor.LastDonationDate" tabindex="12" />
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Last Name:</label>
                <InputText class="form-control" @bind-Value="NewDonor.LastName" tabindex="2" />
            </div>

             <div class="mb-3">
                <label class="form-label">Phone Number:</label>
                <InputText class="form-control" @bind-Value="NewDonor.Phone" tabindex="7" />
            </div>

            <div class="mb-3">
                <label class="form-label">Blood Group:</label>
                <InputSelect class="form-control" @bind-Value="NewDonor.BloodGroup" tabindex="4">
                    <option value="">Select Blood Group</option>
                    @foreach (var bloodType in BloodGroupsList)
                    {
                        <option value="@bloodType">@bloodType</option>
                    }
                </InputSelect>
            </div>

            <div class="mb-3">
                <label class="form-label">Weight (kg):</label>
                <InputNumber class="form-control" @bind-Value="NewDonor.Weight" tabindex="9" />
            </div>

            <div class="mb-3">
                <label class="form-label">State:</label>
                <InputText class="form-control" @bind-Value="NewDonor.State" tabindex="11" />
            </div>

            <div class="mb-3">
                <label class="form-label">Pin Code:</label>
                <InputText class="form-control" @bind-Value="NewDonor.PinCode" tabindex="10" />
            </div>

            <div class="mb-3">
                <label class="form-label">Full Address:</label>
                <InputText class="form-control" @bind-Value="NewDonor.Address" tabindex="12" />
            </div>
        </div>
    </div>

    <!-- Eligibility Status -->
    @* <div class="mb-3">
        <label class="form-label">Eligibility Status:</label>
        <p>@(CheckEligibility() ? "Eligible to Donate" : "Not Eligible")</p>
    </div> *@

    <div class="d-flex justify-content-center gap-3 mt-2">
          <button type="submit" class="btn btn-primary" tabindex="13">@ButtonName</button>
          <button type="button" class="btn btn-secondary" tabindex="14" @onclick="HandleClearRestore">@ClearResetButton</button>
    </div>
</EditForm>
