@page "/settings/profile"
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>My Profile</PageTitle>

@if (user != null)
{
    <div class="card shadow-lg p-4 rounded" style="max-width: 600px; margin: auto; margin-top: 2rem;">
        <h3 class="text-center mb-3">ðŸ‘¤ My Profile</h3>
        <hr />

        <div class="row mb-3">
            <div class="col-4 fw-bold">Full Name:</div>
            <div class="col-8">@user.FullName</div>
        </div>

        <div class="row mb-3">
            <div class="col-4 fw-bold">Email:</div>
            <div class="col-8">@user.Email</div>
        </div>

        <div class="row mb-3">
            <div class="col-4 fw-bold">Phone:</div>
            <div class="col-8">@user.PhoneNumber</div>
        </div>

        <div class="row mb-3">
            <div class="col-4 fw-bold">Role:</div>
            <div class="col-8">@user.Role</div>
        </div>

        <div class="text-center mt-4">
            <RadzenButton Text="Edit Profile" Icon="edit" Style="margin-right:10px;" ButtonStyle="ButtonStyle.Primary" Click="@EditProfile" />
            <RadzenButton Text="Change Password" Icon="lock" ButtonStyle="ButtonStyle.Secondary" Click="@ChangePassword" />
        </div>
    </div>
}
else
{
    <p class="text-center mt-5">Loading profile...</p>
}

@code {
    private UserInfo user;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var claims = authState.User;

        if (claims.Identity.IsAuthenticated)
        {
            user = new UserInfo
            {
                FullName = claims.FindFirst(c => c.Type == "UserId")?.Value,
                Email = claims.FindFirst(c => c.Type == "email")?.Value,
                PhoneNumber = claims.FindFirst(c => c.Type == "phone")?.Value,
                Role = claims.FindFirst(c => c.Type == "role")?.Value
            };
        }
    }

    private void EditProfile()
    {
        // redirect to Edit Profile page
    }

    private void ChangePassword()
    {
        // redirect to Change Password page
    }

    public class UserInfo
    {
        public string FullName { get; set; }
        public string Email { get; set; }
        public string PhoneNumber { get; set; }
        public string Role { get; set; }
    }
}
