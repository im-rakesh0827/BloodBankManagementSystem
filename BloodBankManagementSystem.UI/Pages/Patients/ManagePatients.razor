@page "/managePatients"
@inject IJSRuntime JSRuntime
@inject HttpClient Http
@if(IsLoading){
    <LoaderComponent></LoaderComponent>
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <!-- Left section: Title and Register button -->
    <div class="d-flex align-items-center">
        <h4 class="me-3 mb-0">Registered Patients</h4>
        <button class="btn btn-success btn-sm register-btn" @onclick="OpenCreatePoup">Patient +</button>
    </div>

    <!-- Right section: Filter and Export -->
    <div class="d-flex align-items-center">
        <label for="filterDropdown" class="mb-0 me-2">Filter:</label>
        <InputSelect id="filterDropdown"
                     @bind-Value="FilterBasedOn"
                     class="form-select filterDropdown"
                     style="width: 160px;"
                     @bind-Value:after="ApplyFilteredPatientsList">
            <option value="Active">Show Active</option>
            <option value="Last7Days">Last 7 Days</option>
            <option value="Last30Days">Last 30 Days</option>
            <option value="Last1Year">Last 1 Year</option>
            <option value="All">Show All</option>
        </InputSelect>

        <button class="btn btn-primary btn-sm ms-3" @onclick="ExportPatientsToExcel">Export to Excel</button>
    </div>
</div>


@if (FilteredPatientsList is null)
{
    <p>Loading...</p>
}
else if (!FilteredPatientsList.Any())
{
    <p>No patients found.</p>
}
else
{
    <table class="data-table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Blood Type Needed</th>
                <th>Phone Number</th>
                <th>Country</th>
                <th>State</th>
                <th>District</th>
                <th>PinCode</th>
                <th>Full Address</th>
                <th>Action</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in FilteredPatientsList)
            {
                <tr>
                    <td>@patient.FirstName</td>
                    <td>@patient.LastName</td>
                    <td>@patient.Age</td>
                    <td>@patient.BloodTypeNeeded</td>
                    <td>@patient.PhoneNumber</td>
                    <td>@patient.Country</td>
                    <td>@patient.State</td>
                    <td>@patient.District</td>
                    <td>@patient.PinCode</td>
                    <td>@patient.Address</td>
                    <td>
                        <div class="d-flex gap-2">
                            <button class="btn btn-sm" @onclick="() => ShowPatientHistory(patient)">
                              <HistoryIcon />
                            </button>
                            <button class="btn btn-sm" @onclick="() => OpenEditModal(patient)">
                                    <EditViewIcon />
                            </button>

                            <button class="btn btn-sm" @onclick="() => DeletePatient(patient.PatientID)">
                                <DeleteIcon />
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<!-- Modal Popup -->
@if (IsCreateUpdatePopup)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <RegisterPatient SelectedPatientData="SelectedPatient" OnClose="HandleCancelOrClose" OnPatientUpdated="RefreshPatientList" IsCreateUpdatePatientPopup="IsCreateUpdatePopup" />
        </div>
    </div>
}



@if(ShowHistoryPopup){
    <div class="modal-overlay">
        <div class="modal-content">
        <PatientHistoryComponent 
              IsVisible="ShowHistoryPopup"
              Patient="SelectedPatient"
              HistoryList="PatientHistoryList"
              OnClose="CloseHistoryPopup" />
        </div>
    </div>
}