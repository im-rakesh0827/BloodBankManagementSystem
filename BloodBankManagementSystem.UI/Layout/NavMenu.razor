@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Blood Bank</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>


        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/dashboard">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> DashBoard
            </NavLink>
        </div>


        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/donar">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Donor
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/patient">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Patient
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/hospital">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Hospital
            </NavLink>
        </div>


        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/registerPatient">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Register Patient
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/registerUser">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Register User
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/users">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Manage User
            </NavLink>
        </div>
    </nav>
</div>
@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
